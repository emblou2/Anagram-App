<h1>Words</h1>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <table class="table table-striped">
      <thead>
        <th class="text-center">Text</th>
        <th class="text-center">Letters</th>
        <th class="text-center">Actions</th>
      </thead>
      <tbody class="table-body">
        <% @words.each do |word| %>
          <tr>
            <td><a href="<%= "/words/#{word.id}" %>"><%= word.text %></a></td>
            <td><%= word.letters %></td>
            <td><a href="<%= "/words/#{word.id}/edit" %>">Edit</a>
            <td>
              <form action="<%= "/words/#{word.id}" %>" method="post">
                <input type="hidden" name="_method" value="delete" />
                <i class="fa fa-trash-o"></i> <input type="submit" value="Delete" class="btn btn-danger" />
              </form>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
