<% if !@error.nil? %>
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <%= @error %>
  </div>
<% end %>

<form action="<%= words_form_action(@word) %>" method="post" class="form form-horizontal <%= words_form_class(@word) %>">
<input type="hidden" name="_method" value="<%= words_form_method(@word) %>" />
  <div class="form-group">
    <div class="row">
      <label for="word" class="top-margin-45">Enter your own word here</label>
    </div>

    <div class="row">
      <input type="text" name="text" class="form-control"
          id="word-input" value="<%= @word.text %>" />
    </div>

    <div class="row">
      <input type="submit" class="btn btn-primary btn-block top-margin-45" id="word-submit"
          value="<%= words_form_submit_text(@word) %> anagram!" />
    </div>
  </div>
</form>